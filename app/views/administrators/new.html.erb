<h1>Sign Up</h1>

<%= form_for @administrator do |f| %>

    <% if @administrator.errors.any? %>
        <div class="error_messages">
            <h2>Form is Invalid</h2>

            <ul>
                <% @administrator.erros.full_messages.each do |message| %>
                    <li><%= message %></li>
                <%end%>
            </ul>
        </div>
    <%end%>

    <div class=field>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
    </div>

    <div class="action"><%= f.submit "Sign Up" %></div>
<%end%>
