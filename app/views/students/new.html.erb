<h1>Sign Up</h1>

<%= form_for @student do |f| %>

    <% if @student.errors.any? %>
        <div class="error_messages">
            <h2>Form is Invalid</h2>

            <ul>
                <% @student.erros.full_messages.each do |message| %>
                    <li><%= message %></li>
                <%end%>
            </ul>
        </div>
    <%end%>

    <div class=field>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>

    <div class=field>
        <%= f.label :birth_date %><br />
        <%= f.date_field :birth_date %>
    </div>

    <div class=field>
        <%= f.label :cpf %><br />
        <%= f.text_field :cpf %>
    </div>

    <div class=field>
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
    </div>

    <div class=field>
        <%= f.label :cell_phone %><br />
        <%= f.text_field :cell_phone %>
    </div>

    <div class=field>
        <%= f.label :address %><br />
        <%= f.text_field :address %>
    </div>

    <div class=field>
        <%= f.label :city %><br />
        <%= f.text_field :city %>
    </div>

    <div class=field>
        <%= f.label :state %><br />
        <%= f.text_field :state %>
    </div>

    <div class=field>
        <%= f.label :scholarship %><br />
        <%= f.number_field :scholarship %>
    </div>

    <div class=field>
        <%= f.label :scholarship_need %><br />
        <%= f.number_field :scholarship_need %>
    </div>

    <div class=field>
        <%= f.label :situation %><br />
        <%= f.number_field :situation %>
    </div>

    <div class=field>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
    </div>

    <div class=field>
        <%= f.label :classe %><br />
        <%= f.text_field :classe %>
    </div>

    <div class="action"><%= f.submit "Sign Up" %></div>
<%end%>
