<h3 id="fonte">Alunos do Cursinho</h3>

<table>
    <tbody>
        <tr>
            <th>Nome</th>
            <th>Endere√ßo</th>
            <th>CPF</th>
            <th colspan="3"></th>
        </tr>
        <% @students.each do |student|  %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.address %></td>
                <td><%= student.cpf %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">visibility</i>Visualizar</button>'.html_safe, student %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">visibility</i>Visualizar</button>'.html_safe, student %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_student_url(student) %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_student_url(student) %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, student, method: :delete, data: {confirm: "Tem certeza?"} %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, student, method: :delete, data: {confirm: "Tem certeza?"} %></td>

            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '<button class="btn green darken-3"><i class="material-icons left">create</i>Novo Aluno</button>'.html_safe, new_student_path %>
