<h1 id="fonte">Arquivos do Cursinho</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.description %></td>
        <% if archive.tipo == 0 %>
          <td>Carta da Coordenação</td>
        <%end%>
        <% if archive.tipo == 1 %>
          <td>Formulário do Professor</td>
        <%end%>
        <% if archive.tipo == 2 %>
          <td>Vagas para Professores</td>
        <%end%>
        <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">file_download</i>Download</button>'.html_safe, archive_download_path(archive) %>
        <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">file_download</i>Download</button>'.html_safe, archive_download_path(archive) %></td>

        <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_archive_path(archive) %>
        <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_archive_path(archive) %></td>

        <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, archive, method: :delete, data: { confirm: 'Tem Certeza?' } %>
        <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, archive, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button class="btn green darken-3"><i class="material-icons left">create</i>Novo Arquivo</button>'.html_safe, new_archive_path %>
