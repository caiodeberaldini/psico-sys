<%= form_with(model: [@role, User.new], local: true) do |form| %>
    <div class="field">
        <%= form.label :username %><br/>
        <%= form.text_field :username %>
        <%= form.label :password %><br/>
        <%= form.password_field :password %>
    </div>
    <%= form.submit class:"btn btn-primary" %>
<% end %>