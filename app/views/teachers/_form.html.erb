<%= form_with(model: teacher, local: true) do |form| %>
    <% if teacher.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

        <ul>
        <% teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <div class=field>
        <%= form.label :name %><br />
        <%= form.text_field :name %>
    </div>

    <div class=field>
        <%= form.label :birth_date %><br />
        <%= form.date_field :birth_date %>
    </div>

    <div class=field>
        <%= form.label :cpf %><br />
        <%= form.text_field :cpf %>
    </div>

    <div class=field>
        <%= form.label :address %><br />
        <%= form.text_field :address %>
    </div>

    <div class=field>
        <%= form.label :city %><br />
        <%= form.text_field :city %>
    </div>

    <div class=field>
        <%= form.label :state %><br />
        <%= form.text_field :state %>
    </div>

    <div class=field>
        <%= form.label :phone %><br />
        <%= form.text_field :phone %>
    </div>

    <div class=field>
        <%= form.label :cell_phone %><br />
        <%= form.text_field :cell_phone %>
    </div>

    <div class=field>
        <%= form.label :disciplina, 'Disciplina' %><br />
        <%= form.collection_select(:disciplina, Subject.order(:name), :id, :name, {:prompt => 'Escolha uma Disciplina'}, {:class => 'browser-default'}) %>
    </div>

    <div class=field>
        <%= form.label :email %><br />
        <%= form.text_field :email %>
    </div>

    <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
