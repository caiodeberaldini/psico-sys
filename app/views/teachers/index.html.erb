<h3 id="fonte">Professores do Cursinho</h3>

<table>
    <tbody>
        <tr>
            <th>Nome</th>
            <th>Endere√ßo</th>
            <th>Disciplina</th>
            <th colspan="3"></th>
        </tr>
        <% @teachers.each do |teacher|  %>
            <tr>
                <td><%= teacher.name %></td>
                <td><%= teacher.address %></td>
                <td><%= Subject.find(teacher.disciplina).name %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">visibility</i>Visualizar</button>'.html_safe, teacher %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">visibility</i>Visualizar</button>'.html_safe, teacher %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_teacher_url(teacher) %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">edit</i>Editar</button>'.html_safe, edit_teacher_url(teacher) %></td>

                <td><%= link_to '<button class="btn green darken-3 hide-on-med-and-down"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, teacher, method: :delete, data: {confirm: "Tem certeza?"} %>
                <%= link_to '<button class="btn-floating green darken-3 hide-on-large-only"><i class="material-icons left">delete</i>Apagar</button>'.html_safe, teacher, method: :delete, data: {confirm: "Tem certeza?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '<button class="btn green darken-3"><i class="material-icons left">create</i>Novo Professor</button>'.html_safe, new_teacher_path %>
