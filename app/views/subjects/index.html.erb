<h1>Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Visualizar', subject %></td>
        <td><%= link_to 'Editar', edit_subject_path(subject) %></td>
        <td><%= link_to 'Deletar', subject, method: :delete, data: { confirm: 'Tem Certeza??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Disciplina', new_subject_path %>
